{
  "name": "agenttrust",
  "version": "0.1.0",
  "description": "Trust & audit layer for AI agents. Tamper-evident action logging for OpenClaw and beyond.",
  "author": {
    "name": "Omoshola",
    "url": "https://github.com/omoshola-o"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omoshola-o/agenttrust.git"
  },
  "homepage": "https://github.com/omoshola-o/agenttrust#readme",
  "bugs": {
    "url": "https://github.com/omoshola-o/agenttrust/issues"
  },
  "keywords": [
    "ai-agent",
    "audit",
    "trust",
    "openclaw",
    "security",
    "logging",
    "tamper-evident"
  ],
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "bin": {
    "agenttrust": "./dist/cli/index.js"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "skill/",
    "configs/",
    "assets/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist/",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "ulid": "^2.3.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "oxlint": "^0.12.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
